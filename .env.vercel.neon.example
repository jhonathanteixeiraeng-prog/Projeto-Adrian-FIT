# URL pública final da aplicação (domínio da Vercel)
NEXTAUTH_URL="https://SEU-PROJETO.vercel.app"

# Gere um segredo forte:
# openssl rand -base64 32
NEXTAUTH_SECRET="TROQUE_POR_UM_SEGREDO_FORTE"

# Banco Neon (PostgreSQL) - use a URL de produção do Neon
# Exemplo:
# postgresql://USER:PASSWORD@ep-xxxxx-xxxxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# TACO API (opcional, recomendada para busca nutricional brasileira)
# Base URL da API REST escolhida (sem barra final)
# Exemplo: https://sua-taco-api.onrender.com
TACO_API_BASE_URL="https://SUA-TACO-API"

# Opcional: endpoints e chaves de query caso sua API tenha rota diferente
# TACO_API_ENDPOINT_PATHS="/foods/search,/api/foods/search,/alimentos"
# TACO_API_QUERY_KEYS="q,query,nome"

# Opcional: token/chave, se sua TACO API exigir autenticação
# TACO_API_TOKEN="SEU_TOKEN"
